{
  "name": "local-producer-frontend",
  "version": "1.0.0",
  "description": "Frontend for Local Producer Web Application - Mobile-first ordering system",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "ANALYZE=true react-scripts build",
    "build:production": "NODE_ENV=production react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "performance:audit": "npm run build && npx lighthouse http://localhost:3000 --output html --output-path ./performance-report.html",
    "bundle:analyze": "npm run build:analyze && open build/bundle-report.html",
    "size:check": "npm run build && npx bundlesize"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "axios": "^1.6.2",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "tailwindcss": "^3.3.6",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "clsx": "^2.0.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-helmet-async": "^2.0.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-react-app": "^7.0.1",
    "prettier": "^3.1.0",
    "web-vitals": "^3.5.0",
    "@craco/craco": "^7.1.0",
    "compression-webpack-plugin": "^10.0.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "image-webpack-loader": "^8.1.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "bundlesize": "^0.18.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:8080",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "bundlesize": [
    {
      "path": "./build/static/js/*.js",
      "maxSize": "500kb",
      "compression": "gzip"
    },
    {
      "path": "./build/static/css/*.css",
      "maxSize": "50kb",
      "compression": "gzip"
    }
  ]
}